<%# -------- Banner -------- %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i0.wp.com/tokyotreatblog.wpcomstaging.com/wp-content/uploads/2022/12/tokyotreat_cosplay.png?w=1024&ssl=1;">
    <div class="row">
      <div class="col mx-5 justify-content-start">
        <%= image_tag 'costrade_logo.png', alt: "logo", class: "logo_img" %>
        <%= link_to "Sign up Now!", new_user_registration_path, class: "btn btn-danger text-white mt-3 p-2" %>
  </div>
  </div>
</div>


<%# -------- 3 easy steps images -------- %>
<div class="container mb-5">
  <div  class= "mt-5 text-center">
  <div class="row mx-5 three_steps">
    <div class="col pfont">
      <h3>Browse</h3>
      <%= image_tag 'search_red.png', alt: "search", class:"image mt-2" %>
      <div>
      <p>Find the perfect costume</p>
      </div>
    </div>
    <div class="col pfont">
      <h3>Rent</h3>
      <%= image_tag 'rent_red.png', alt: "search", class:"image mt-2" %>
      <p>Request & Rent!</p>
    </div>
    <div class="col pfont">
      <h3>Return</h3>
      <%= image_tag 'return_red.png', alt: "search", class:"image mt-2" %>
      <p>Enjoy your costume & Return</p>
    </div>
  </div>
  </div>
</div>


<%# -------- "Trending" header index card -------- %>
<div class="container">
  <div class= "row">
    <div class="col">
      <h3>Trending costumes</h3>
    </div>
    <div class="col text-end">
      <span><%= link_to costumes_path do %>See all costumes<i class="fa-solid fa-angle-right"></i><%end%></span>
    </div>
  </div>
</div>


<%# -------- Costume index card -------- %>
<div class="wrapper">
    <% @costumes.each do |costume| %>
      <div class="costume-index-card">
        <div class="costume-image-placeholder">
          <%= image_tag costume.photos.attached? ? cl_image_path(costume.photo.key) : image_path('https://i.etsystatic.com/12503620/r/il/0260a0/2006887017/il_570xN.2006887017_jttt.jpg'), style: "height: 100%; width: 100%; border-radius: 24px; margin-bottom: 8px; object-fit: cover;"%>
        </div>
          <h5><%= link_to costume.title, costume_path(costume), class: "costume-index-card-title" %></h5>
          <p class="costume-index-card-text"><%= costume.description[0,20] %>...  <%= link_to 'see more', costume_path(costume) %></p>
          <p class="costume-index-card-price"><strong><%= costume.price %></strong> jpy/day</p>
      </div>
    <% end %>
    <%# -------- Add your costume to lend? -------- %>
    <div class="costume-index-card bg-warning">
        <div class="costume-image-placeholder">
        <img src="assets/add_costume.png" alt="search" style= "height: 100%; width: 100%; border-radius: 24px; margin-bottom: 8px; object-fit: cover;">
        </div>
        <p class="costume-index-card-text text-center mt-2">Add your costumes to lend!</p>
          <%= link_to "Add costumes!", new_costume_path, class: "btn btn-danger text-white mt-3 p-2" %>
      </div>
  </div>
